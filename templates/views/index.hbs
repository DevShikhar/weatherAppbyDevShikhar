<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Weather App</title>
		<link rel="stylesheet" href="./style.css" />
	</head>
	<body>
		<div class="parnet-container">
			{{>header}}
			<h1>{{title}} by {{owner}}</h1>
			<div class="wethform">
				<div class="innerwethform">
					<form action="/weather" method="get">
						<div class="entercity"><label class="entercity">Enter City Name</label></div>
						<div><input type="text" name="city" class="inputcity" required></div>
						<button type="submit" class="btn-weth">Get Weather</button>
					</form>
				</div>
			</div>
		</div>
		{{>footer}}

	</body>
</html>